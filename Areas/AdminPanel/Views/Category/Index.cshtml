@model List<Category>

@{
    int count = 0;
}
<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Category Table</h4>
                <div class="table-responsive">
                    <a asp-action="create" class="btn btn-success">Create</a>
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>
                                    No#
                                </th>
                                <th>
                                    Name
                                </th>
                                <th>
                                    Products Count
                                </th>
                                <th>
                                    Settings
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (Category category in Model)
                            {
                                <tr>
                                    <td>
                                        <p></p>
                                    </td>
                                    <td>
                                        <p>@category.Name</p>
                                    </td>
                                    <td>
                                        <p>@category.Products.Count</p>
                                    </td>
                                    <td>
                                        <a class="btn btn-warning" asp-action="update" asp-route-id="@category.Id"><i class="mdi mdi-border-color"></i></a>
                                        <a class="btn btn-danger" asp-action="delete" asp-route-id="@category.Id"><i class="mdi mdi-delete"></i></a>
                                        <a class="btn btn-primary"><i class="mdi mdi-information"></i></a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>